<!DOCTYPE html>
<html>
  <head>
    <title>Meshiterro2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <% if user_signed_in? %>
        <li>
          <%= link_to "ログアウト", destroy_user_session_path, method: :delete %>
        </li>
        <li>
          <%= link_to "投稿フォーム", user_registration_path %>
        </li>
        <li>
          <%= link_to "マイページ", user_registration_path %>
        </li>
      <% else %>
        <li>
          <%= link_to "新規登録", user_registration_path %>
        </li>
        <li>
          <%= link_to "ログイン", new_user_session_path %>
        </li>
      </header>
    <%= yield %>
  </body>
</html>
